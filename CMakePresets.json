{
    "version": 3,
    "configurePresets": [
        {
            "name": "common",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "unix_makefiles",
            "hidden": true,
            "generator": "Unix Makefiles",
            "condition": {
                "type": "notEquals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "inherits": "common"
        },
        {
            "name": "msvc_2022",
            "hidden": true,
            "generator": "Visual Studio 16 2019", 
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "inherits": "common"
        },
        {
            "name": "debug_common",
            "hidden": true,
            "displayName": "Debug Config",            
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TEST_SUITE": {
                    "type": "BOOL",
                    "value": "TRUE"
                },
                "USE_GCOV": {
                    "type": "BOOL",
                    "value": "TRUE"
                }
            }
        },
        {
            "name": "Debug Unix",
            "description": "Debug configuration using Unix Makefiles",
            "inherits":  ["debug_common", "unix_makefiles"]
        },
        {
            "name": "Debug MSVC",
            "description": "Debug configuration using MSVC 2022",
            "inherits":  ["debug_common", "msvc_2022"]
        },
        {
            "name": "release_common",
            "hidden": true,
            "displayName": "Release Config",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_TEST_SUITE": {
                    "type": "BOOL",
                    "value": "TRUE"
                }
            }
        },
        {
            "name": "Release Unix",
            "description": "Release configuration using Unix Makefiles",
            "inherits":  ["release_common", "unix_makefiles"]
        },
        {
            "name": "Release MSVC",
            "description": "Release configuration using MSVC 2022",
            "inherits":  ["release_common", "msvc_2022"]
        }
    ],
    "buildPresets": [
        {
            "name": "common",
            "hidden": true,
            "jobs": 100
        },
        {
            "name": "debug",
            "displayName": "Debug Build",
            "description": "Debug build using Unix Makefiles",
            "inherits": "common",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "displayName": "Release Build",
            "description": "Release build using Unix Makefiles",
            "inherits": "common",
            "configurePreset": "release"
        }
    ],
    "testPresets": [
        {
            "name": "common",
            "hidden": true,
            "output": {
                "outputOnFailure": true,
                "outputLogFile": "test.log"
            }
        },
        {
            "name": "debug",
            "displayName": "Unit Tests (debug mode)",
            "inherits": "common",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "displayName": "Unit Tests (release mode)",
            "inherits": "common",
            "configurePreset": "release"
        }
    ]
}
